{% extends 'base.html.twig' %}
{% block body %}
    <div class="project">
        <div class="project_image">
            <img src="{{ asset('build/images/project/'~project.picture) }}">
        </div>
        <div class="project_title">
            <h2>{{ project.name }}</h2>
        </div>
        <div class="project_info">
            <h4>description: </h4>
            <p>{{ project.description }}</p>
            <h4>language principal: </h4>
            <p>{{ project.langage }}</p>
            <h4>Thème: </h4>
            <p>{{ project.category }}</p>
            <h4>date: </h4>
            <p>{{ project.date|date("d/m/Y") }}</p>
            <div class="project-info_link">
                <h4>dépôt github: </h4>
                <a href="{{ project.link }}">{{ project.link }}</a>
            </div>
        </div>
    </div>
    {% if app.user %}
        <a class="btn" href="{{ path('project_edit', {'id': project.id}) }}">edit</a>
        {{ include('project/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
